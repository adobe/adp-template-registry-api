{
    "root": true,
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "extends": [
      "@adobe/eslint-config-aio-lib-config"
    ],
    "plugins": ["jest"],
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-trailing-spaces": ["error"],
      "node/no-unpublished-require": 0,
      "node/no-extraneous-require": 0
    },
    "env": {
      "es2021": true,
      "node": true,
      "jest/globals": true
    }
  }