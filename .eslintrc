{
    "root": true,
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended"
    ],
    "plugins": ["jest"],
    "rules": {
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "semi": ["error", "always"],
      "quotes": ["error", "single"],
      "no-trailing-spaces": ["error"]
    },
    "env": {
      "es2021": true,
      "node": true,
      "jest/globals": true
    }
  }