{
  "name": "template-registry-api",
  "version": "0.0.1",
  "private": true,
  "dependencies": {
    "@adobe/aio-sdk": "^3.0.0",
    "@octokit/rest": "^18.12.0",
    "axios": "^0.27.2",
    "lodash.orderby": "^4.6.0",
    "openapi-enforcer": "^1.21.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@openwhisk/wskdebug": "^1.3.0",
    "@types/jest": "^28.1.2",
    "eslint": "^8.13.0",
    "eslint-plugin-jest": "^26.1.4",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^27.2.4",
    "jest-junit": "^14.0.0",
    "nock": "^13.2.4"
  },
  "scripts": {
    "test": "npm run lint:check && npm run unit-tests",
    "unit-tests": "jest --ci",
    "lint:check": "eslint --ext .js .",
    "lint:fix": "eslint --ext .js --fix ."
  },
  "engines": {
    "node": "^18"
  },
  "jest": {
    "rootDir": ".",
    "testEnvironment": "node",
    "verbose": true,
    "setupFilesAfterEnv": [
      "./test/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [],
    "reporters": [
      "default",
      "jest-junit"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 85,
        "lines": 85,
        "statements": 85
      }
    }
  }
}
